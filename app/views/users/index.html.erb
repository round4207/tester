<table class="table">
	<thead>
		<tr>
			<td>ID</td>
			<td>Username</td>
			<td>Password</td>
			<td>Edit</td>
			<td>Delete</td>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>		
		<tr>
			<td><%= user.id %></td>
			<td><%= link_to user.username, user %></td>
			<td><%= user.password %></td>
			<td><%= link_to 'Edit', edit_user_path(user.id) %></td>
			<td><%= link_to 'DESTROY!!', user, :method => :delete %></td>
			
		</tr>
		<% end %>
	</tbody>
</table>
<%= link_to 'Create New User', new_user_path %>
